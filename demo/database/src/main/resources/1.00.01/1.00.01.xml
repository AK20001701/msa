<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	
    <property name="autoIncrement" value="false" dbms="postgresql,mssql,oracle"/>
    <property name="autoIncrement" value="true" dbms="h2"/>

    <changeSet id="1.00.01-createSeq-demo_smsverification_id_seq" author="КАЗАНИН А.А.">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="demo_smsverification_id_seq"/>
            </not>
        </preConditions>
        <createSequence incrementBy="1" sequenceName="demo_smsverification_id_seq" startValue="1"/>
    </changeSet>

    <changeSet id="1.00.01-createTbl-demo_smsverification" author="КАЗАНИН А.А.">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="demo_smsverification"/>
            </not>
        </preConditions>
        <createTable tableName="demo_smsverification">
            <column name="smsverificationid" type="numeric(15,0)"
                    autoIncrement="${autoIncrement}"
                    defaultValueSequenceNext="demo_smsverification_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_demo_smsverification"/>
            </column>
            <column name="phonenumber" type="text"/>
            <column name="code" type="text"/>
            <column name="guid" type="text"/>
        </createTable>
    </changeSet>
		
</databaseChangeLog>